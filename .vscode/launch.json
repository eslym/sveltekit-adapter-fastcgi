    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Simple Mode",
            "skipFiles": ["<node_internals>/**"],
            "program": "${workspaceFolder}\\debug\\simple.js",
            // "runtimeArgs": ["--preserve-symlinks"],
            "outFiles": ["${workspaceFolder}/**/*.js"]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Cluster Mode",
            "skipFiles": ["<node_internals>/**"],
            "program": "${workspaceFolder}\\debug\\cluster.js",
            // "runtimeArgs": ["--preserve-symlinks"],
            "outFiles": ["${workspaceFolder}/**/*.js"]
        }
    ]
}
